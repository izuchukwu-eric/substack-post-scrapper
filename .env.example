# Substack Scraper Configuration

# Browser settings
SUBSTACK_HEADLESS=true

# Scraping limits
SUBSTACK_DEFAULT_RESULTS_LIMIT=50
SUBSTACK_MAX_RESULTS_LIMIT=200
SUBSTACK_SCROLL_DELAY_MS=1000
SUBSTACK_SCROLL_TIMEOUT_MS=30000

# Rate limiting
SUBSTACK_RATE_LIMIT_REQUESTS=10
SUBSTACK_RATE_LIMIT_WINDOW_SECONDS=60

# Output settings
SUBSTACK_OUTPUT_DIR=./output

# API settings
SUBSTACK_API_HOST=0.0.0.0
SUBSTACK_API_PORT=8000

# Logging
SUBSTACK_LOG_LEVEL=INFO
